<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Brand - Store Management</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
</head>

<body>
  <!-- Navbar Section -->
  <nav class="navbar is-light">
    <div class="container">
      <div class="navbar-brand">
        <a class="navbar-item" href="/brand-mng">Brand Management</a>
      </div>
    </div>
  </nav>

  <!-- Edit Brand Form -->
  <section class="section">
    <div class="container">
      <h1 class="title is-3">Edit Brand</h1>

      <!-- Form to edit brand details -->
      <form onsubmit="return confirm(`Are you sure to edit brand`)" action="/brand-mng/edit/<%= Brand._id %>" method="post">
        <!-- Brand Name Field -->
        <div class="field">
          <label class="label">Brand Name</label>
          <div class="control">
            <input class="input" type="text" name="brandName" value="<%= Brand.brandName %>" required>
          </div>
        </div>

        <% if (err) { %>
          <p class="has-text-danger">
            <%= err %>
          </p>
        <% } %>

        <!-- Buttons for submission and cancellation -->
        <div class="field is-grouped">
          <div class="control">
            <form action="" method="post">
              <button class="button is-primary" type="submit">Save Changes</button>
            </form>
          </div>
          <div class="control">
            <a class="button is-light" href="/brand-mng">Cancel</a>
          </div>
        </div>
      </form>
    </div>
  </section>

  <!-- Footer Section -->
  <footer class="footer">
    <div class="content has-text-centered">
      <p>Store Management Â© 2024. All rights reserved.</p>
    </div>
  </footer>
</body>

</html>
